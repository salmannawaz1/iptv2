<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:attr/colorBackground">

    <!-- Status Bar Background -->
    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/bg_color"/>

    <!-- Toolbar positioned below status bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/statusBarBackground"
        android:background="@color/bg_color"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="IPTVmine"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/close_icon"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Close"
                android:padding="8dp"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/mic_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Voice Search"
                android:padding="12dp"
                android:src="@drawable/ic_mic"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/toolbar_icon_background"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toStartOf="@id/mic_icon"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:contentDescription="Search"
                android:padding="12dp"
                android:src="@drawable/search"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/toolbar_icon_background"
                app:tint="@android:color/white" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ViewPager2 for swipe navigation -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBarContainer"
        android:layout_below="@id/toolbar" />

    <!-- Bottom Bar Container -->
    <FrameLayout
        android:id="@+id/bottomBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!-- Smooth Bottom Bar (Default) -->
        <me.ibrahimsn.lib.SmoothBottomBar
            android:id="@+id/smoothBottomBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:visibility="visible"
            app:backgroundColor="@color/bg_color"
            app:iconSize="24dp"
            app:indicatorRadius="10dp"
            app:itemPadding="10dp"
            app:menu="@menu/menu_bottom"
            app:sideMargins="10dp"
            app:textSize="14sp" />

        <!-- Animated Bottom Bar -->
        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/animatedBottomBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg_color"
            android:visibility="gone"
            app:abb_tabs="@menu/menu_bottom_animated"
            app:abb_selectedTabType="text"
            app:abb_indicatorHeight="3dp" />

        <!-- Chip Navigation Bar -->
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigationBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg_color"
            android:visibility="gone"
            app:cnb_menuResource="@menu/menu_bottom_chip" />

    </FrameLayout>
</RelativeLayout>
