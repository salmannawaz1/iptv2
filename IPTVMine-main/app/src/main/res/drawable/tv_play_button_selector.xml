<?xml version="1.0" encoding="utf-8"?>
<!-- TV-optimized play button selector with prominent focus states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/tv_focus_blue" />
            <stroke android:width="4dp" android:color="@color/white" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF1565C0" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#60FFFFFF" />
            <stroke android:width="2dp" android:color="#80FFFFFF" />
        </shape>
    </item>
</selector>