<?xml version="1.0" encoding="utf-8"?>
<!-- TV-optimized player controller with larger buttons and better D-pad navigation -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42000000"
    >

    <!-- Top Controller Bar -->
    <LinearLayout
        android:id="@+id/topController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/tv_button_selector"
            android:contentDescription="@string/back_btn"
            android:focusable="true"
            android:nextFocusRight="@id/castBtn"
            android:nextFocusDown="@id/playPauseBtn"
            android:src="@drawable/back_icon"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/video_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/castBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="gone"
            android:focusable="true"
            android:nextFocusLeft="@id/backBtn"
            android:nextFocusDown="@id/playPauseBtn"
            app:mediaRouteButtonTint="@color/white" />
    </LinearLayout>

    <!-- Center Play/Pause Controls -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/progressContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topController">

        <ImageButton
            android:id="@+id/prevBtn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/tv_button_selector"
            android:contentDescription="@string/prev_btn"
            android:focusable="true"
            android:nextFocusUp="@id/backBtn"
            android:nextFocusRight="@id/playPauseBtn"
            android:nextFocusDown="@id/exo_progress"
            android:src="@drawable/previous_icon"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/playPauseBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/tv_play_button_selector"
            android:contentDescription="@string/play_btn"
            android:focusable="true"
            android:nextFocusUp="@id/backBtn"
            android:nextFocusLeft="@id/prevBtn"
            android:nextFocusRight="@id/nextBtn"
            android:nextFocusDown="@id/exo_progress"
            android:src="@drawable/play_icon"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/tv_button_selector"
            android:contentDescription="@string/next_btn"
            android:focusable="true"
            android:nextFocusUp="@id/castBtn"
            android:nextFocusLeft="@id/playPauseBtn"
            android:nextFocusDown="@id/exo_progress"
            android:src="@drawable/next_icon"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Progress Bar Container -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottomController"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:focusable="true"
            android:nextFocusUp="@id/playPauseBtn"
            android:nextFocusDown="@id/repeatBtn"
            app:bar_height="8dp"
            app:buffered_color="#80FFFFFF"
            app:played_color="@color/tv_focus_blue"
            app:scrubber_color="@color/white"
            app:scrubber_disabled_size="16dp"
            app:scrubber_enabled_size="24dp"
            app:touch_target_height="48dp"
            app:unplayed_color="#40FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Controller Bar -->
    <LinearLayout
        android:id="@+id/bottomController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/repeatBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/tv_button_selector"
            android:contentDescription="@string/repeat_btn"
            android:focusable="true"
            android:nextFocusUp="@id/exo_progress"
            android:nextFocusRight="@id/fullScreenBtn"
            android:src="@drawable/repeat_off_icon"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/fullScreenBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/tv_button_selector"
            android:contentDescription="@string/fullscreen_btn"
            android:focusable="true"
            android:nextFocusUp="@id/exo_progress"
            android:nextFocusLeft="@id/repeatBtn"
            android:src="@drawable/fullscreen_icon"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Live Indicator -->
    <TextView
        android:id="@+id/exo_live_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/live_indicator_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="LIVE"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topController" />

    <!-- Cast Status -->
    <LinearLayout
        android:id="@+id/castStatusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cast_status_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topController">

        <ImageView
            android:id="@+id/castStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/chromecast_connected_icon" />

        <TextView
            android:id="@+id/castStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casting to Device"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Cast Volume Control -->
    <LinearLayout
        android:id="@+id/castVolumeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="#AA000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/castStatusContainer">

        <ImageView
            android:id="@+id/castVolumeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/volume_icon"
            app:tint="@color/white" />

        <SeekBar
            android:id="@+id/castVolumeSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />
    </LinearLayout>

    <!-- Watermark -->
    <TextView
        android:id="@+id/watermarkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:text="Powered by samyak2403"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/bottomController"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>