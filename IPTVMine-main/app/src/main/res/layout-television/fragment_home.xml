<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ TV-optimized layout for HomeFragment
  ~ Uses larger spacing and optimized for D-pad navigation
  ~ Includes overscan-safe margins and enhanced focus handling
  -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:paddingStart="48dp"
    android:paddingEnd="48dp"
    android:paddingTop="27dp"
    android:paddingBottom="27dp">

    <!-- Category Filter Row -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:focusable="false"
        android:descendantFocusability="afterDescendants"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp"
            app:singleSelection="true"
            app:chipSpacingHorizontal="24dp" />
    </HorizontalScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Channel Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:descendantFocusability="afterDescendants"
        android:nextFocusUp="@id/categoryChipGroup"
        tools:listitem="@layout/item_channel_televison"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
